---
import ClassesCard from "../components/ClassesCard.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to the best fitness experience | Nerd Fitness">
  <Hero />
  <main>
    <section class="py-24 text-center">
      <div class="container">
        <h2 class="text-center font-semibold text-4xl mb-5">
          Your success is our goal
        </h2>
        <p class="text-center max-w-lg mx-auto">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
          {
            Array.from(Array(3)).map((_) => (
              <ClassesCard
                heading="Yoga, Pilates, and barres"
                image="./images/gym-pic-01.jpg"
                linkTarget=""
                trainer={{ avatar: "", name: "" }}
              />
            ))
          }
        </div>
        <a class="button-gray mt-24" href="/nerd-fitness/classes"
          >See all classes</a
        >
      </div>
    </section>
  </main>
</Layout>
